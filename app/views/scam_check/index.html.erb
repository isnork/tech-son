<!-- Hero Section with Title -->
<div class="text-center mb-12">
  <h1 class="text-6xl font-bold text-[#3423A6] mb-4 tracking-tight">
    Am I Being Scammed?
  </h1>
  <p class="text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
    Get instant analysis of suspicious messages, emails, and websites from our AI security specialists
  </p>
</div>

<!-- Form Section -->
<div class="max-w-xl mx-auto p-8 bg-white rounded-xl shadow-lg">
  <form action="/scam_check/create" method="post" enctype="multipart/form-data" class="flex flex-col gap-6">
    <%= csrf_meta_tags %>
    <div>
      <label class="block font-semibold mb-1 text-gray-700">Describe your problem <span class="text-red-500">*</span></label>
      <textarea name="description" rows="6" required class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#3423A6] focus:outline-none resize-vertical text-base"></textarea>
    </div>
    <div>
      <label class="block font-semibold mb-1 text-gray-700">Upload a screenshot (optional)</label>
      <div class="relative">
        <input type="file" name="screenshot" accept="image/*" id="file-upload" class="hidden" />
        <label for="file-upload" class="flex flex-col items-center justify-center w-full h-32 border-2 border-dashed border-gray-300 rounded-lg cursor-pointer bg-gray-50 hover:bg-gray-100 transition-colors group">
          <div class="flex flex-col items-center justify-center pt-5 pb-6">
            <svg class="w-8 h-8 mb-4 text-gray-500 group-hover:text-[#3423A6] transition-colors" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2"/>
            </svg>
            <p class="mb-2 text-sm text-gray-500 group-hover:text-[#3423A6] transition-colors">
              <span class="font-semibold">Click to upload</span> or drag and drop
            </p>
            <p class="text-xs text-gray-500">PNG, JPG, GIF up to 10MB</p>
          </div>
        </label>
        <div id="file-preview" class="hidden mt-3 p-3 bg-[#3423A6]/5 border border-[#3423A6]/20 rounded-lg">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-[#3423A6] mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
            </svg>
            <span id="file-name" class="text-sm text-[#3423A6] font-medium"></span>
            <button type="button" id="remove-file" class="ml-auto text-gray-400 hover:text-red-500 transition-colors">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
    <div>
      <label class="block font-semibold mb-1 text-gray-700">
        Sender's Email Address (optional)
        <button type="button" id="email-info" class="ml-2 text-[#3423A6] hover:text-[#2a1c85] transition-colors">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
          </svg>
        </button>
      </label>
      <div id="email-tooltip" class="hidden mb-3 p-3 bg-[#3423A6]/5 border border-[#3423A6]/20 rounded-lg">
        <p class="text-sm text-gray-700">
          <strong>Note:</strong> We're looking for the email address where the suspicious message came from, not your email address. 
          This helps us analyze the sender's patterns and identify potential scams.
        </p>
      </div>
      <input type="email" name="email" placeholder="suspicious@example.com" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#3423A6] focus:outline-none" />
    </div>
    <div>
      <label class="block font-semibold mb-1 text-gray-700">
        Suspicious URL (optional)
        <button type="button" id="url-info" class="ml-2 text-[#3423A6] hover:text-[#2a1c85] transition-colors">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
          </svg>
        </button>
      </label>
      <div id="url-tooltip" class="hidden mb-3 p-3 bg-[#3423A6]/5 border border-[#3423A6]/20 rounded-lg">
        <p class="text-sm text-gray-700">
          <strong>Note:</strong> We're looking for the URL where someone is trying to get you to go to. If there is not one, that's ok. 
          This helps us analyze the destination website for potential scams or phishing attempts.
        </p>
      </div>
      <input type="url" name="url" placeholder="https://suspicious-site.com" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#3423A6] focus:outline-none" />
    </div>
    <button type="submit" class="bg-[#3423A6] hover:bg-[#2a1c85] text-white font-bold py-3 rounded-lg text-lg transition-colors">Ask the Security Specialist</button>
  </form>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const fileUpload = document.getElementById('file-upload');
  const filePreview = document.getElementById('file-preview');
  const fileName = document.getElementById('file-name');
  const removeFile = document.getElementById('remove-file');
  const dropZone = document.querySelector('label[for="file-upload"]');

  // Handle file selection
  fileUpload.addEventListener('change', function(e) {
    const file = e.target.files[0];
    if (file) {
      showFilePreview(file);
    }
  });

  // Handle drag and drop
  dropZone.addEventListener('dragover', function(e) {
    e.preventDefault();
    dropZone.classList.add('border-[#3423A6]', 'bg-[#3423A6]/5');
  });

  dropZone.addEventListener('dragleave', function(e) {
    e.preventDefault();
    dropZone.classList.remove('border-[#3423A6]', 'bg-[#3423A6]/5');
  });

  dropZone.addEventListener('drop', function(e) {
    e.preventDefault();
    dropZone.classList.remove('border-[#3423A6]', 'bg-[#3423A6]/5');
    
    const files = e.dataTransfer.files;
    if (files.length > 0) {
      const file = files[0];
      if (file.type.startsWith('image/')) {
        fileUpload.files = files;
        showFilePreview(file);
      } else {
        alert('Please select an image file.');
      }
    }
  });

  // Remove file
  removeFile.addEventListener('click', function() {
    fileUpload.value = '';
    filePreview.classList.add('hidden');
  });

  function showFilePreview(file) {
    fileName.textContent = file.name;
    filePreview.classList.remove('hidden');
  }

  // Email tooltip functionality
  const emailInfo = document.getElementById('email-info');
  const emailTooltip = document.getElementById('email-tooltip');

  emailInfo.addEventListener('click', function() {
    emailTooltip.classList.toggle('hidden');
  });

  // URL tooltip functionality
  const urlInfo = document.getElementById('url-info');
  const urlTooltip = document.getElementById('url-tooltip');

  urlInfo.addEventListener('click', function() {
    urlTooltip.classList.toggle('hidden');
  });

  // Close tooltips when clicking outside
  document.addEventListener('click', function(e) {
    if (!emailInfo.contains(e.target) && !emailTooltip.contains(e.target)) {
      emailTooltip.classList.add('hidden');
    }
    if (!urlInfo.contains(e.target) && !urlTooltip.contains(e.target)) {
      urlTooltip.classList.add('hidden');
    }
  });
});
</script>
